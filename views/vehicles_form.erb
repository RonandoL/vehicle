<div class="jumbotron">
  <h2>Add your vehicle here:</h2>
  <h4 class="well">and we'll sell the shit out of it!</h4>
</div>

<!-- Our Form -->
  <form action="/vehicles" method="post">

    <div class="form-group">
      <label for="make">Make</label>
      <input id="make" name="make" class="form-control" type="text" placeholder="add make of your vehicle">
    </div>

    <div class="form-group">
      <label for="model">Model</label>
      <input id="model" name="model" class="form-control" type="text" placeholder="add model of your vehicle">
    </div>

    <div class="form-group">
      <label for="year">Year</label>
      <input id="year" name="year" class="form-control" type="text" placeholder="add year of your vehicle">
    </div>

    <button type="submit" class="btn btn-info">Add yo car foo!</button>
  </form>
